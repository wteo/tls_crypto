<%- include('./partials/head.ejs') %>

<body>
    <header>
        <%- include('./partials/nav_header.ejs') %>
    </header>
        <section>
            <div class="coin__wrapper">
                <p class="coin__breadcrumb"><a href="/<%= encode(group) %>"><%= group %></a> > <%= coin %></p>
                <h1 class="coin__title"><%= coin %></h1>
                <div class="coin__grid">
                    <div class="coin__container">
                        <p class="coin__description"><%= description %></p>
                    </div>
                    <div class="coin__container">
                        <img class="coin__image" src="<%= imageLink %>" alt="Coin Map" />
                    </div>
                </div>
                <h1 class="coin__resources-title">Learn More</h1>
                <div class="coin__resources-grid">
                    <% resources.forEach( resource => { %>
                        <div class="coin__resources-container">
                            <a href="<%= resource.hyperlink %>">
                                <img class="coin__resources-image" src="<%= resource.imageLink %>" alt="" />
                                <h3 class="coin__resources-group"><%= resource.resource %></h3>
                            </a>
                        </div>
                    <% }) %>
                </div>
            </div>
        </section>
    <%- include('./partials/footer.ejs') %>
    <script src="/js/resources_grid.js"></script>
</body>

</html>
