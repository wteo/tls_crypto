<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Real Estate Website</title>
    <script src="/js/delete_modal.js" defer></script>
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>
    <header>
        <%- include('../partials/nav_header.ejs') %>
    </header>
        <section>
            <form class="location__form" action="/admin/submit-add-location-form" method="POST">
                <label for="region">Region:</label>
                <select name="region" required>
                    <option value="">Select a region</option>
                    <% regions.forEach( region => { %>
                        <option value="<%= region.region %>"><%= region.region %></option>
                    <% }) %>
                </select>

                <label for="location">Location:</label>
                <input type="text" name="location" required>
                
                <label for="imageLink">Location Image Link:</label>
                <input type="url" name="locationImageLink" required>

                <label for="description">Description:</label>
                <textarea type="text" name="description" rows="4" required>
                </textarea>
                
                <label for="imageLink">Map Image Link:</label>
                <input type="url" name="mapImageLink" required>

                <input type="hidden" name="csrfToken" value="<%= csrfToken %>">
                
                <div class="buttons-wrapper">
                    <button type="submit">Add Location</button>
                    <a href="/admin"><button type="button">Cancel</button></a>
                </div> 
            </form>
        </section>
    <%- include('../../partials/footer.ejs') %>
</body>

</html>