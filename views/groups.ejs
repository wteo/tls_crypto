<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TLS Crypto Hub</title>
    <script src="/js/nav_header.js" defer></script>
    <script src="/js/accordion.js" defer></script>
    <script src="/js/see_more_button.js" defer></script>
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>
    <header>
        <%- include('./partials/nav_header.ejs') %>
    </header>
    
    <%- include('./partials/contact_us.ejs') %>
    
    <% groups.forEach( group => { %>
        <section>
            <div class="group__wrapper">
                <h1 class="group__title"><%= group.group %></h1>
                <p class="group__description"><%= group.description %></p>
                <div class="group__coin-grid" data-group="<%= group.group %>">
                    <% group.coins.forEach( coin => { %>
                        <div class="group__coin-container">
                            <a href="/<%= encode(group.group) %>/<%= encode(coin.coin) %>">
                                <img class="group__coin-image" src="<%= coin.coinLogoLink %>" alt="Logo of coin" />
                                <h3 class="group__coin-title"><%= coin.coin %></h3>
                            </a>
                        </div>
                    <% }) %>
                </div>
            </div>
        </section>
    <% }) %>

    <section class="accordion__wrapper">
        <div class="accordion">
            <h1 class="accordion__title">Frequently Asked Questions</h1>
            <% faqItems.forEach(item => { %>
                <div class="accordion__item">
                    <button class="accordion__header">
                        <h4><%= item.question %></h4>
                        <i>+</i>
                    </button>
                    <div class="accordion__content">
                        <p><%= item.answer %></p>
                    </div>
                </div>
            <% }) %>
        </div>
    </section>
    
    <%- include('./partials/footer.ejs') %>
</body>

</html>
