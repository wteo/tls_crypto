<nav class="nav">
    <ul class="nav__menu">
        <% categories.forEach( category => { %>
            <li class="nav__menu-title"><%= category %>
                <br/>
                <ul class="nav__dropdown">
                    <% groups.forEach( group => { %>
                        <% if (group.category === category) { %>
                            <li class="nav__dropdown-title"><a href="/<%= group.group %>"><%= group.group %></a></li>
                        <% } %>
                    <% }) %>
                </ul>
            </li>
        <% }) %>
    </ul>
    <form class="nav__search" method="GET" action="/results">
        <input class="nav__search-input" type="text" placeholder="Search a coin..." name="coin" />
        <input type="hidden" name="csrfToken" value="<%= csrfToken %>">
        <button class="nav__search-button">
            <img class="nav__search-icon" src="/icons/search.png" alt="Search Icon" />
        </button>
    </form>
</nav>