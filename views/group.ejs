<%- include('./partials/head.ejs') %>

<body>
    <header>
        <%- include('./partials/nav_header.ejs') %>
    </header>
        <section>
            <div class="group__wrapper">
                <h1 class="group__title"><%= group %></h1>
                <p class="group__description"><%= description %></p>
                <div class="group__coin-grid">
                    <% coins.forEach( coin => { %>
                        <div class="group__coin-container">
                            <a href="/<%= encode(group) %>/<%= encode(coin.coin) %>">
                                <img class="group__coin-image" src="<%= coin.coinLogoLink %>" alt="" />
                                <h3 class="group__coin-title"><%= coin.coin %></h3>
                            </a>
                        </div>
                    <% }) %>
                </div>
            </div>
        </section>
    <%- include('./partials/footer.ejs') %>
</body>

</html>
