<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TLS Crypto Index</title>
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>
    <header>
        <%- include('./partials/nav_header.ejs') %>
    </header>
        <section>
            <div class="group__wrapper">
                <h1 class="group__title"><%= group %></h1>
                <p class="group__description"><%= description %></p>
                <div class="group__coin-grid">
                    <% coins.forEach( coin => { %>
                        <div class="group__coin-container">
                            <a href="/<%= group %>/<%= coin.coin %>">
                                <img class="group__coin-image" src="<%= coin.imageLink %>" alt="" />
                                <h3 class="group__coin-title"><%= coin.coin %></h3>
                            </a>
                        </div>
                    <% }) %>
                </div>
            </div>
        </section>
    <%- include('./partials/footer.ejs') %>
</body>

</html>
