<%- include('../partials/head.ejs') %>

<body>
    <header>
        <%- include('../partials/nav_header.ejs') %>
    </header>
        <section>
            <form class="login__form" action="/reset" method="POST">

                <% if (successMessage) { %>
                    <p class="flash-message success"><%= successMessage %></p>
                <% } %>

                <% if (errorMessage) { %>
                    <p class="flash-message invalid"><%= errorMessage %></p>
                <% } %>

                <label for="username">Enter your username here:</label>
                <input type="text" name="username" required>
                
                <input type="hidden" name="csrfToken" value="<%= csrfToken %>">

                <div class="buttons-wrapper">
                    <button type="submit">Reset Password</button>
                </div>                
            </form>
        </section>
    <%- include('../partials/footer.ejs') %>
</body>

</html>