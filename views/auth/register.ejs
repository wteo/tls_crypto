<%- include('../partials/head.ejs') %>

<body>
    <header>
        <%- include('../partials/nav_header.ejs') %>
    </header>
        <section>
            <form class="register__form" action="/register" method="POST">

                <% if (errorMessage) { %>
                    <p class="flash-message invalid"><%= errorMessage %></p>
                <% } %>

                <label for="username">Username:</label>
                <input type="text" name="username" value="<%= oldInput.username %>" required>
                
                <label for="password">Password:</label>
                <input type="password" name="password" value="<%= oldInput.password %>" required>

                <label for="confirmedPassword">Confirm Password:</label>
                <input type="password" name="confirmedPassword" required>

                <input type="hidden" name="csrfToken" value="<%= csrfToken %>">

                <div class="buttons-wrapper">
                    <button type="submit">Register</button>
                </div>                
            </form>
        </section>
    <%- include('../partials/footer.ejs') %>
</body>

</html>