<%- include('../partials/head.ejs') %>

<body>
    <header>
        <%- include('../partials/nav_header.ejs') %>
    </header>
        <section>
            <form class="login__form" action="/new-password" method="POST">

                <% if (errorMessage) { %>
                    <p class="flash-message invalid"><%= errorMessage %></p>
                <% } %>

                <label for="newPassword">Enter your new password here:</label>
                <input type="password" name="newPassword" required>

                <label for="confirmedNewPassword">Confirm your new password:</label>
                <input type="password" name="confirmedNewPassword" required>

                <input type="hidden" name="userId" value="<%= userId %>">
                <input type="hidden" name="passwordToken" value="<%= passwordToken %>">
                <input type="hidden" name="csrfToken" value="<%= csrfToken %>">

                <div class="buttons-wrapper">
                    <button type="submit">Update Password</button>
                </div>                
            </form>
        </section>
    <%- include('../partials/footer.ejs') %>
</body>

</html>