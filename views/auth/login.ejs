<%- include('../partials/head.ejs') %>

<body>
    <header>
        <%- include('../partials/nav_header.ejs') %>
    </header>
        <section>
            <form class="login__form" action="/login" method="POST">

                <% if (successMessage) { %>
                    <p class="flash-message success"><%= successMessage %></p>
                <% } %>

                <% if (errorMessage) { %>
                    <p class="flash-message invalid"><%= errorMessage %></p>
                <% } %>

                <label for="username">Username:</label>
                <input type="text" name="username" value="<%= oldInput.username %>" required>
                
                <label for="password">Password:</label>
                <input type="password" name="password" value="<%= oldInput.password %>" required>

                <p class="login__form-text">Don't have an account? Register <a href="/register">here</a>.</p>
                <br />
                <br />


                <input type="hidden" name="csrfToken" value="<%= csrfToken %>">

                <div class="buttons-wrapper">
                    <button type="submit">Login</button>
                </div>
                <a href="/forgot-password"><p>Forgot your password?</p></a>                
            </form>
        </section>
    <%- include('../partials/footer.ejs') %>
</body>

</html>